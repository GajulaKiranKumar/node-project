<h1 class="update-title">Update a Note</h1>

<form class="update-form" action="/api/edit/{{payload._id}}" method="post">
  <div class="form-group">
    <label for="noteId">Note ID</label>
    <input type="text" id="noteId" name="noteId" value="{{payload.noteId}}" required />
  </div>

  <div class="form-group">
    <label for="noteName">Note Name</label>
    <input type="text" id="noteName" name="noteName" value="{{payload.noteName}}" required />
  </div>

  <div class="form-group">
    <label for="description">Note Description</label>
    <input type="text" id="description" name="description" value="{{payload.description}}" required />
  </div>

  <div class="form-group">
    <label for="status">Note Status</label>
    <input type="text" id="status" name="status" value="{{payload.status}}" required />
  </div>

  <button type="submit" class="update-btn">Update Note</button>
</form>
