<section class="notelist">
  <article>
    <h1 class="note-title">All Notes</h1>

    {{#each payload}}
    <div class="note-card">
      <ul class="note-details">
        <li><strong>Note ID:</strong> {{this.noteId}}</li>
        <li><strong>Note Name:</strong> {{this.noteName}}</li>
        <li><strong>Description:</strong> {{this.description}}</li>
        <li><strong>Status:</strong> {{this.status}}</li>
      </ul>

      <div class="note-actions">
        <a class="btn info" href="/api/{{this._id}}">Information</a>
        <a class="btn edit" href="/api/edit/{{this._id}}">Update</a>
        <a class="btn delete" href="/api/delete/{{this._id}}">Delete</a>
      </div>
    </div>
    {{else}}
    <marquee behavior="scroll" direction="right">
      <h2 class="no-notes">ðŸ˜… No Notes Found. Go Create One!</h2>
    </marquee>
    {{/each}}
  </article>
</section>
