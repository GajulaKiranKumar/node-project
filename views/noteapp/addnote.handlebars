<h1 class="form-title">Add a Note</h1>

<form class="note-form" action="/api/addnote" method="post">
  <div class="form-group">
    <label for="noteId">Note ID</label>
    <input type="text" id="noteId" name="noteId" required />
  </div>

  <div class="form-group">
    <label for="noteName">Note Name</label>
    <input type="text" id="noteName" name="noteName" required />
  </div>

  <div class="form-group">
    <label for="description">Note Description</label>
    <input type="text" id="description" name="description" required />
  </div>

  <div class="form-group">
    <label for="status">Note Status</label>
    <input type="text" id="status" name="status" required />
  </div>

  <button type="submit" class="submit-btn">Submit</button>
</form>
